{
	"name": "perplexity-ext",
	"displayName": "Perplexity.ai",
	"description": "AI Integration for Perplexity.ai with VSCode",
	"icon": "images/icon.png",
	"version": "2.0.1",
	"engines": {
		"vscode": "^1.96.0"
	},
	"publisher": "ghutu",
	"categories": [
		"AI"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "perplexity-ext.openChatWindow",
				"title": "Perplexity: Open Chat Window"
			},
			{
				"command": "perplexity-ext.setAPIToken",
				"title": "Perplexity: Set API Token"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "perplexity-sidebar",
					"title": "Perplexity",
					"icon": "$(comment-discussion)"
				}
			]
		},
		"views": {
			"perplexity-sidebar": [
				{
					"type": "webview",
					"id": "perplexityChatView",
					"name": "AI Chat"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/jest": "^29.5.14",
		"@types/mocha": "^10.0.10",
		"@types/node": "^20.17.16",
		"@types/vscode": "^1.96.0",
		"@typescript-eslint/eslint-plugin": "^8.17.0",
		"@typescript-eslint/parser": "^8.17.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"esbuild": "^0.24.0",
		"eslint": "^9.16.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.7.2"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/gabrielhutu/perplexity-ext.git"
	},
	"dependencies": {
		"vsce": "^2.15.0",
		"vscode-test": "^1.6.1"
	},
	"__metadata": {
		"installedTimestamp": 1756906465769,
		"targetPlatform": "undefined",
		"size": 1558157
	}
}